- name: setup dhcp-lease-server-url
  shell:  curl -i http://localhost:8500/v1/kv/kahu/v0.2/network/br0/public.json -X PUT -d @{{ var_playbook_dir }}/files/dhcp-lease-server-url.json
  shell:  curl -i http://localhost:8500/v1/kv/kahu/v0.2/compute/profile/empty/public.json -X PUT -d @{{ var_playbook_dir }}/files/empty.json
  shell:  curl -i http://localhost:8500/v1/kv/kahu/v0.2/compute/size/1cpu1gb/public.json -X PUT -d @{{ var_playbook_dir }}/files/1cpu1gb.json
- name: private json key
  shell:  curl -i http://localhost:8500/v1/kv/kahu/v0.2/hypervisor/instance/0/private.json -X PUT -d '{"url":"{{ var_private_json_key }}"}'
- name: public json key
  shell:  curl -i http://localhost:8500/v1/kv/kahu/v0.2/hypervisor/instance/0/public.json -X PUT -d @{{ var_playbook_dir }}/files/public.json

- name: hv.toml
  copy:
    src: ./hv.toml
    dest: /kahu/etc/hv.toml

- name: rest.toml
  copy:
    src: ./rest.toml
    dest: /kahu/etc/rest.toml

